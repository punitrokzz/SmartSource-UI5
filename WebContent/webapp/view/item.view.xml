                        </contentLeft>
                        <contentMiddle>
                            <Title text="Smart Source" />
                        </contentMiddle>
                        <contentRight />
                    </Bar>
                </uxap:navigationBar>
                <uxap:breadcrumbs>
                    <Breadcrumbs currentLocationText="{ path: 'Name1', formatter:'.formatter.textFormat' }">
                        <Link text="Home" press="onNavHome" />
                        <Link text="{ path: 'projectInfo>/Spid', formatter:'.formatter.textFormat' }" press="onNavBack" />
                    </Breadcrumbs>
                </uxap:breadcrumbs>
            </uxap:ObjectPageHeader>
