<mvc:View controllerName="smartsourceapp.controller.projectDetail" xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:microchart="sap.suite.ui.microchart">
    <uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="false" class="sapUiSizeCompact">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader objectTitle="{ path: 'projectInfo>/Spid', formatter:'.formatter.textFormatter' }" objectSubtitle="{projectInfo>/Id}" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" showPlaceholder="false">
                <uxap:navigationBar>
                    <Bar>
                        <contentLeft>
                            <Button type="Back" press="onNavBack" />
                        </contentLeft>
                        <contentMiddle>
                            <Title text="Smart Source" />
                        </contentMiddle>
                        <contentRight />
                    </Bar>
                </uxap:navigationBar>
                <uxap:breadcrumbs>
                    <Breadcrumbs currentLocationText="{ path: 'projectInfo>/Name', formatter:'.formatter.textFormatter' }">
                        <Link text="Home" press="onNavHome" />
                    </Breadcrumbs>
                </uxap:breadcrumbs>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:headerContent>
            <VBox>
                <HBox>
                    <Label text="Submission Deadline:" class="sapUiTinyMarginEnd" />
                    <Text text="{ path: 'projectInfo>/Smd', formatter:'.formatter.dateFormatter' }" />
                </HBox>
                <HBox>
                    <Label text="Total Target Amount:" class="sapUiTinyMarginEnd" />
                    <ObjectNumber number="{projectInfo>/Tamt}" unit="USD" />
                </HBox>
            </VBox>
            <VBox>
                <Title text="Number of Participants" />
            </VBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection title="General Information">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="General Information">
                        <uxap:blocks>
                            <l:VerticalLayout width="100%" class="gridWrapper">
                                <l:Grid containerQuery="true" defaultSpan="XL2 L3">
                                    <VBox>
                                        <Title text="Basic Data" />
                                        <Label text="Material Group" vAlign="Middle" />
                                        <Text text="Basic Data" />
                                        <ObjectAttribute title="Country" text="{ path: 'supplier>/Land1', formatter:'.formatter.textFormatter' }" />
                                        <ObjectAttribute title="Ort" text="{ path: 'supplier>/Ort1', formatter:'.formatter.textFormatter' }" />
                                    </VBox>
                                    <VBox>
                                        <Title text="Supplier Quotation Settings" />
                                        <Label text="Material Group" vAlign="Middle" />
                                        <Text text="Basic Data" />
                                        <ObjectAttribute title="Country" text="{ path: 'supplier>/Land1', formatter:'.formatter.textFormatter' }" />
                                        <ObjectAttribute title="Ort" text="{ path: 'supplier>/Ort1', formatter:'.formatter.textFormatter' }" />
                                    </VBox>
                                    <VBox>
                                        <Title text="Organization" />
                                        <Label text="Material Group" vAlign="Middle" />
                                        <Text text="Basic Data" />
                                        <ObjectAttribute title="Country" text="{ path: 'supplier>/Land1', formatter:'.formatter.textFormatter' }" />
                                        <ObjectAttribute title="Ort" text="{ path: 'supplier>/Ort1', formatter:'.formatter.textFormatter' }" />
                                    </VBox>
                                    <VBox>
                                        <Title text="Contact Details" />
                                        <Label text="Purchaser Responsible:" vAlign="Middle" />
                                        <Text text="Basic Data" />
                                    </VBox>
                                </l:Grid>
                            </l:VerticalLayout>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Items">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="">
                        <uxap:blocks>
                            <Table items="{/MaterialDataSet}" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <columns>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Item Number" width="auto" />
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Description" width="auto" />
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Product Type" width="auto" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Navigation" press="onNavigateItem(${Matnr})">
                                        <cells>
                                            <ObjectIdentifier title="{Matnr}" text="" />
                                            <ObjectStatus text="1 Standard Item" />
                                            <ObjectStatus text="Standard sourcing item" />
                                            <!-- <ObjectStatus text="Material (1)" /> -->
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Supplier List">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Supplier List">
                        <uxap:blocks>
                            <Table items="{/SupplierDataSet}" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <columns>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Supplier" width="auto" />
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Name" width="auto" />
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Navigation" press="onNavigateSupplier(${Snr})">
                                        <cells>
                                            <ObjectIdentifier title="{Snr}" text="" />
                                            <Text text="{ path: 'Name1', formatter:'.formatter.textFormatter' }" width="auto" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
