<mvc:View controllerName="smartsourceapp.controller.projectDetail" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:uxap="sap.uxap" 
    xmlns="sap.m" 
    xmlns:microchart="sap.suite.ui.microchart">
    <uxap:ObjectPageLayout showTitleInHeaderContent="false" showHeaderContent="true" showEditHeaderButton="false" showFooter="false" class="sapUiSizeCompact">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader objectTitle="Sample Sourcing Project" objectSubtitle="1000000108" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" showPlaceholder="false">
                <uxap:navigationBar>
                    <Bar>
                        <contentLeft>
                            <Button type="Back" press="onNavBack"/>
                        </contentLeft>
                        <contentMiddle>
                            <Title text="Smart Source"/>
                        </contentMiddle>
                        <contentRight/>
                    </Bar>
                </uxap:navigationBar>
                <uxap:breadcrumbs>
                    <Breadcrumbs currentLocationText="Sample Sourcing Project">
                        <Link text="Home" press="onNavHome"/>
                    </Breadcrumbs>
                </uxap:breadcrumbs>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:headerContent>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection title="Items">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Items">
                        <uxap:blocks>
                            <Table width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <columns>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Item Number" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Description" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Product Type" width="auto"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <ObjectStatus text="1 Standard Item"/>
                                            <ObjectStatus text="Standard sourcing item"/>
                                            <ObjectStatus text="Material (1)"/>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection title="Supplier List">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="Supplier List">
                        <uxap:blocks>
                            <Table items="{/SupplierDataSet}" width="100%" growing="true" growingScrollToLoad="true" growingThreshold="25" mode="None">
                                <columns>
                                    <Column width="auto" minScreenWidth="Tablet" demandPopin="true">
                                        <header>
                                            <Text text="Supplier" width="auto"/>
                                        </header>
                                    </Column>
                                    <Column width="auto" minScreenWidth="Phone">
                                        <header>
                                            <Text text="Name" width="auto"/>
                                        </header>
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Navigation" press="onNavigate(${Snr})">
                                        <cells>
                                            <ObjectIdentifier title="{Snr}" text="" />
                                            <Text text="{ path: 'Name1', formatter:'.formatter.textFormatter' }" width="auto" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
